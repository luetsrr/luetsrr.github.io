    <script>
      const burger = document.querySelector("#burger");
      const close = document.querySelector("#close");
      const menu = document.querySelector("#menu");

      if (burger) {
        burger.addEventListener("click", () => {
          burger?.classList.toggle("is-active");
          close?.classList.toggle("is-active");
          menu?.classList.toggle("is-active");
        });
      }

      if (close) {
        close.addEventListener("click", () => {
          burger?.classList.remove("is-active");
          close?.classList.remove("is-active");
          menu?.classList.remove("is-active");
        });
      }

      // 全てのサブメニューのリンクにイベントを追加
      document.querySelectorAll('.dropdown-content a').forEach(link => {
        link.addEventListener('click', () => {
          const dropdown = link.closest('.dropdown') as HTMLElement | null;
          if (!dropdown) return;

          const content = dropdown.querySelector('.dropdown-content') as HTMLElement | null;
          if (!content) return;

          content.style.display = 'none'; // OK
        });
      });


        // 親のホバーで再表示
        document.querySelectorAll('.dropdown').forEach(dropdown => {
        const dropdownEl = dropdown as HTMLElement; // 型を明示
        dropdownEl.addEventListener('mouseenter', () => {
          const content = dropdownEl.querySelector('.dropdown-content') as HTMLElement | null;
          if (!content) return;
          content.style.display = 'block';
        });

        dropdownEl.addEventListener('mouseleave', () => {
          const content = dropdownEl.querySelector('.dropdown-content') as HTMLElement | null;
          if (!content) return;
          content.style.display = 'none';
        });
      });

    </script>

