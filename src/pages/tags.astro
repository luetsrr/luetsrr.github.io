---
import Layout from "../layouts/Layout.astro";

const allPosts = await Astro.glob("./posts/*.md");
const uniqueTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<Layout title="Tags｜luetsrr.com">
  <div class="margin-contents text-color text-font">
    <span class="midashi">タグ</span>
    <div style="height: 15px;"></div>
    <p class="italic">タグごとに記事を表示できます。</p>
    <div style="height: 30px;"></div>
    {
      uniqueTags.map((tag) => (
        <>
          <a class="text-lg">＃</a>
          <a
            class="text-lg hover-color"
            style="margin-left:0px; margin-right: 10px; border-bottom: 2px dashed;"
            href={`/tags/${tag}`}
          >
            {tag}
          </a>
        </>
      ))
    }
  </div>
</Layout>
